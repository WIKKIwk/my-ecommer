# Django Settings
# SECRET_KEY will be auto-generated by setup.sh for security
# Keep this secret in production!
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Enable debug mode (True for development, False for production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated domains/IPs)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Your domain or server IP (used for production deployment)
DOMAIN_OR_IP=your-domain.com


# Database
# Credentials will be auto-generated by setup.sh for security
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://ecommerce_user:ecommerce_secure_2024@db:5432/ecommerce

# CORS (empty for development, set for production)
CORS_ALLOWED_ORIGINS=

# SMS Gateway (Eskiz.uz) - Get credentials from eskiz.uz
ESKIZ_EMAIL=your-email@example.com
ESKIZ_PASSWORD=your-password
SMS_SENDER_NAME=4546
TEST_SMS_FIXED_CODE=1111

# Cloudflare Tunnel (optional, for secure external access)
# Get your tunnel token from: https://one.dash.cloudflare.com
# Create a tunnel, configure it to expose localhost:80, and copy the token
CLOUDFLARE_TUNNEL_TOKEN=
